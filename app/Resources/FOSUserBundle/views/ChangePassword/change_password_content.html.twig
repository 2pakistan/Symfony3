{% trans_default_domain 'FOSUserBundle' %}

<section class="reset-password register">
    <div class="col-sm-6 col-sm-offset-3">
        <h1>Change your password</h1>

        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password form-horizontal' } }) }}

        <div class="form-group">
            {{ form_label(form.current_password ,null, { 'label_attr': { 'class': 'control-label col-sm-3' } }) }}
            <div class="col-sm-9">
                {{ form_widget(form.current_password, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="col-sm-12 alert alert-danger{{ form_errors(form.current_password) is not empty ? '' : ' hide' }}">
                {{ form_errors(form.current_password) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.first ,null, { 'label_attr': { 'class': 'control-label col-sm-3' } }) }}
            <div class="col-sm-9">
                {{ form_widget(form.plainPassword.first , {'attr' : {'class' : 'form-control'}}) }}
            </div>
        </div>


        <div class="form-group">
            {{ form_label(form.plainPassword.second ,null, { 'label_attr': { 'class': 'control-label col-sm-3' } }) }}
            <div class="col-sm-9">
                {{ form_widget(form.plainPassword.second , {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="col-sm-12 alert alert-danger {{ form_errors(form.plainPassword.first) is not empty ? '' : ' hide' }}">
                {{ form_errors(form.plainPassword.first) }}
            </div>
        </div>


        <div class="form-group">
            <input type="submit" value="{{ 'change_password.submit'|trans }}" class="btn btn-block btn-custom btn-lg"/>
        </div>


        {{ form_end(form) }}
    </div>
</section>
