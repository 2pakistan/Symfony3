{% trans_default_domain 'FOSUserBundle' %}

<section class="reset-password register">
    <div class="col-sm-6 col-sm-offset-3">
        <h1>Enter your new password </h1>

        {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset ' } }) }}

        <div class="form-group">
            {{ form_label(form.plainPassword.first ,null, { 'label_attr': { 'class': 'control-label col-sm-3' } }) }}
            <div class="col-sm-9">
                {{ form_widget(form.plainPassword.first , {'attr' : {'class' : 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.plainPassword.second ,null, { 'label_attr': { 'class': 'control-label col-sm-3' } }) }}
            <div class="col-sm-9">
                {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'form-control'}}) }}
            </div>
            <div class="col-sm-12">
                {{ form_errors(form.plainPassword.first) }}
            </div>
        </div>

        <div class="col-sm-12 top-buffer">
            <input type="submit" value="{{ 'resetting.reset.submit'|trans }}" class="btn btn-block btn-lg btn-custom"/>
        </div>
        {{ form_end(form) }}
    </div>
</section>
