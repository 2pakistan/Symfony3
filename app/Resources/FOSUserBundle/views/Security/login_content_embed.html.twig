
{% trans_default_domain 'FOSUserBundle' %}

    <form role="form" method="post" action="{{ path("fos_user_security_check") }}" id="login-nav">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
        <div class="form-group">
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" placeholder="{{ 'security.login.username'|trans }}" required="required" />
        </div>
        <div class="form-group">
            <input type="password" id="password" class="form-control" name="_password" placeholder="{{ 'security.login.password'|trans }}" required="required" />
            <div class="help-block text-right"><a href="{{ path('fos_user_resetting_request') }}">Forgot your password ?</a></div>
        </div>
        <div class="form-group">
            <input type="checkbox" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-custom btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </form>
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}