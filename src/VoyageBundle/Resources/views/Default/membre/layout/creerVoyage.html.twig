{% extends ":layout:layout.html.twig" %}


{% block body %}

    <div class="container">

        <section class="new-trip-header">
            <h1>Création d'un nouveau voyage</h1>
        </section>

        <section class="new-trip">

            {{ form_start(form, {'method': 'post', 'action': path('createTrip'), 'attr': {'class': 'form-trip'}}) }}
            <div class="col-sm-10 col-sm-offset-1 ">

                <div class="form-group row">
                    {{ form_widget(form.titrevoyage) }}
                </div>

                <div class="form-group row">
                    {{ form_label(form.datedebutvoyage, null, {'label':'Date de début du voyage','label_attr': {'class': 'control-label col-sm-3'}}) }}
                    <div class="col-sm-9">
                        <div class="input-group">
                            <div class="input-group-btn">
                                <button id="btnDatePicker" class="btn btn-default">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </button>
                            </div>
                            {{ form_widget(form.datedebutvoyage) }}
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    {{ form_label(form.descriptionvoyage, null, {'label_attr': {'class': 'control-label col-sm-3'}}) }}
                    <div class="col-sm-9 ">
                        {{ form_widget(form.descriptionvoyage,{'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="form-group row">

                    {{ form_label(form.imagefile.file, 'Photo du voyage' , {'label_attr': {'class':
                        'control-label col-sm-3'}}) }}

                    <div class="col-sm-9">
                        <div class="input-group image-preview">
                            <span class="input-group-btn">
                            <!-- image-preview-input -->
                            <div class="btn btn-default image-preview-input">
                                <span class="glyphicon glyphicon-folder-open"></span>
                                <span class="image-preview-input-title">Parcourir</span>
                                {{ form_widget(form.imagefile.file, {'attr':{'class':'form-control'}}) }}
                                <input type="file" accept="image/png, image/jpeg, image/gif" name="input-file-preview"/>
                                <!-- rename it -->
                            </div>
                                <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                                    <span class="glyphicon glyphicon-remove"></span> Effacer
                                </button>
                            </span>
                            <input type="text" class="form-control image-preview-filename" disabled="disabled">
                        </div>
                    </div>
                </div>
            <!-- Button submit Create trip -->
            <div class="row registerFormRow form-group">
                <div class="col-sm-9 col-sm-offset-2">
                    <input class="btn btn-lg btn-custom btn-block" type="submit" value="Créer ce voyage"/>
                </div>
            </div>
                {{ form_widget(form.imagefile.delete, {'attr':{'class':'hide'}}) }}

                {{ form_end(form) }}
            </div>
    </section>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/locales/bootstrap-datepicker.fr.min.js"></script>
    <script src="{{ asset('js/custom.js') }}"></script>
{% endblock %}

