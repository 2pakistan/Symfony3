{% extends ":layout:membre.html.twig" %}


{% block body %}

    <div id="homepage" class="tab-content">
        <!-- post sans photos -->
        <div class="memberPostStep row">
            <div class="col-lg-2 col-md-2 col-xs-3">
                <img src="{{ asset('img/users/profilePicture/' ~ membre.photoprofil ~ '') }}"
                     class="img-responsive img-rounded marginPictureMember" alt="userpic"/>
            </div>

            <div class="col-lg-10 col-md-10 col-xs-9">
                <p class="pseudoMembre inline no-margin">{{ membre.prenom }} {{ membre.nom }}</p>
                <p class="identifiantMembre inline no-margin"> . 19 déc.</p>
                <p class="stepLocation identifiantMembre"><span class="glyphicon glyphicon-globe"> USA</span></p>
                <p> RENTRE A LA MAISON Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium aliquid
                    delectus dignissimos enim esse facilis, incidunt itaque placeat! Aliquid, beatae, laboriosam!
                    Corporis eveniet exercitationem fugiat fugit iusto odit quas sequi.</p>
            </div>
        </div>

        <!-- post multi photos -->
        <div class="memberPostStep row">

            <div class="col-lg-2 col-md-2 col-xs-3">
                <img src="{{ asset('img/users/profilePicture/' ~ membre.photoprofil ~ '') }}"
                     class="img-responsive img-rounded marginPictureMember" alt="userpic"/>
            </div>

            <div class="col-lg-10 col-md-10 col-xs-9">
                <p class="pseudoMembre inline no-margin">{{ membre.prenom }} {{ membre.nom }}</p>
                <p class="identifiantMembre inline no-margin"> . 16 déc.</p>
                <p class="stepLocation identifiantMembre "><span class="glyphicon glyphicon-globe"> Brasil</span></p>
                <p>POST MULTI-PHOTOS // Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium aliquid
                    delectus dignissimos enim esse facilis, incidunt itaque placeat! Aliquid, beatae, laboriosam!
                    Corporis eveniet exercitationem fugiat fugit iusto odit quas sequi.</p>

                <div class="blocImgPost">
                    <div class="col-lg-8 col-md-8 col-xs-8">
                        <img src="{{ asset('img/nature.jpg') }}" class="img-responsive" alt="userpic"/>
                    </div>
                    <div class="col-lg-4 col-md-4 col-xs-4">
                        <img class="img-responsive marginPictureMember" src="{{ asset('img/nature2.jpg') }}"
                             alt="userpic"/>
                        <img class="img-responsive marginPictureMember" src="{{ asset('img/nature3.jpg') }}"
                             alt="userpic"/>
                    </div>
                </div>
            </div>

        </div>

        <!-- post une photo -->
        <div class="memberPostStep row">
            <div class="col-lg-2 col-md-2 col-xs-3">
                <img src="{{ asset('img/users/profilePicture/' ~ membre.photoprofil ~ '') }}"
                     class="img-responsive img-rounded marginPictureMember" alt="userpic"/>
            </div>

            <div class="col-lg-10 col-md-10 col-xs-9">
                <p class="pseudoMembre inline no-margin">{{ membre.prenom }} {{ membre.nom }}</p>
                <p class="identifiantMembre inline no-margin"> . 16 déc.</p>
                <p class="stepLocation identifiantMembre "><span class="glyphicon glyphicon-globe"> Brasil</span></p>
                <p>POST UNE PHOTO // Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusantium aliquid
                    delectus dignissimos enim esse facilis, incidunt itaque placeat! Aliquid, beatae, laboriosam!
                    Corporis eveniet exercitationem fugiat fugit iusto odit quas sequi.</p>


                <div class="blocImgPost">
                    <img src="{{ asset('img/nature.jpg') }}" class="img-responsive  img-rounded" alt="userpic"/>
                </div>
            </div>
        </div>
    </div>

    <div id="trips" class="tab-content">
        <div class="row member-trips">
            <!-- MESSAGE SUCCES FORMULAIRE -->
            <div>
                {% for flashMessage in app.session.flashBag.get('valid_voyage') %}
                    <div class="alert alert-success">{{ flashMessage }}</div>
                {% endfor %}
            </div>

            {% if app.user.id is defined and membre.id == app.user.id %}
                <div class="col-sm-12">
                    <a href="{{ path('createTrip') }}" class="text-white">
                        <div class="btn btn-lg btn-custom btn-block">
                            <b>+</b> Add a new trip
                        </div>
                    </a>
                </div>
            {% endif %}
        </div>
        <div class="row top-buffer ">
            {% if nbTrips > 0 %}
                {% for i in 0..membre.voyages|length-1 %}
                    <div class="col-xs-12 trip-post">
                        <a href="{{ path('voyagePage' , { 'idVoyage': membre.voyages[i].idvoyage } ) }}">
                            <div class="trip-wrapper">
                                <img src="{{ vich_uploader_asset(membre.voyages[i], 'imagefile' ) }}"
                                     alt="{{ membre.voyages[i].photoVoyage }}" class="img-responsive"/>
                            </div>
                            <p class="text-center titleVoyage">{{ membre.voyages[i].titrevoyage }}</p>
                        </a>
                        {% if app.user.id is defined and membre.id == app.user.id %}
                            <a href="{{ path('createStep' , {'idVoyage' : membre.voyages[i].idvoyage }) }}">
                                <div class="btn btn-custom col-xs-6" title="Add a post to this trip">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </div>
                            </a>
                            <div class="btn btn-alert col-xs-6 delete-btn" title="Delete this trip"
                                 data-toggle="modal"
                                 data-target="#modal-delete-{{ membre.voyages[i].idvoyage }}">
                                <span class="glyphicon glyphicon-remove"></span>
                            </div>


                            <!-- Modal -->
                            <div class="modal fade" id="modal-delete-{{ membre.voyages[i].idvoyage }}"
                                 data-key="{{ membre.voyages[i].idvoyage }}" tabindex="-1" role="dialog"
                                 aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="modal-title" id="exampleModalLabel">Trip deletion</h4>
                                        </div>
                                        <div class="modal-body">
                                            <p><b>Warning !</b></p>
                                            <p>You are going to delete this trip.
                                                <b>You will lose all posts and medias related to this trip.</b></p>
                                            <p><b>This action is <span style="color:#e50000">irreversible</span>.</b>
                                            </p>
                                            <p>Do you want to continue anyway? </p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel
                                            </button>
                                            <button type="button" class="btn btn-alert delete-trip"><span
                                                        class="glyphicon glyphicon-remove"></span>&nbsp;Delete
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}
            {% else %}
                {% if app.user.id is defined and membre.id == app.user.id %}
                    <div class="col-xs-12">
                        <p>You haven't created any trip yet ! </p>
                    </div>
                {% else %}
                    <div class="col-xs-12">
                        <p>This traveller hasn't published any trips yet !</p>
                    </div>
                {% endif %}

            {% endif %}
        </div>
    </div>

    <div id="followed" class="tab-content">
        <div class="col-md-12">
            <table class="table table-hover table-striped">
                <tbody>
                {% for user in membre.followed %}
                    <tr class="followed-card" id="followed_{{ user.id }}">
                        <td>
                            <span class="glyphicon glyphicon-eye"></span>
                        </td>
                        <td>
                            <img src="{{ vich_uploader_asset(user, 'imagefile' ) }}"
                                 class="img-circle"
                                 width="60">
                        </td>
                        <td>
                            <h4>
                                <a href="{{ path('memberHp' , { 'id' : user.id} ) }}">
                                    <b>{{ user.prenom }} {{ user.nom }}</b>
                                </a>
                            </h4>
                            <p>@{{ user.username }}</p>
                        </td>
                        {% if app.user.id is defined and membre.id == app.user.id %}
                            <td>
                                <button class="btn btn-custom unfollowBtn" type="button">
                                    <span class="glyphicon glyphicon-remove"></span>&nbsp;Unfollow
                                </button>
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div id="followers" class="tab-content">
        <div class="col-md-12 user-followers">
            <table class="table table-hover table-striped">
                <tbody>
                {% for user in membre.follower %}
                    <tr class="follower-card" id="member_follower_{{ user.id }}">
                        <td>
                            <span class="glyphicon glyphicon-eye"></span>
                        </td>
                        <td>
                            <img src="{{ vich_uploader_asset(user, 'imagefile' ) }}"
                                 class="img-circle"
                                 width="60">
                        </td>
                        <td>
                            <h4>
                                <a href="{{ path('memberHp' , { 'id' : user.id} ) }}">
                                    <b>{{ user.prenom }} {{ user.nom }}</b>
                                </a>
                            </h4>
                            <p>@{{ user.username }}</p>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('js/ajaxUnfollow.js') }}"></script>
    <script src="{{ asset('js/ajaxDeleteTrip.js') }}"></script>
{% endblock %}
